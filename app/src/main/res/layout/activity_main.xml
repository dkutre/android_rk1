<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ovv.rk1.MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <TextView
            android:id="@+id/tv_news_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_news_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_news_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_choose_topic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="choose topic"/>

        <Button
            android:id="@+id/btn_refresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Refresh" />

        <Button
            android:id="@+id/btn_on_background_upd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="update in background"/>

        <Button
            android:id="@+id/btn_off_background_upd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="dont update in background"/>

    </LinearLayout>
    
</android.support.constraint.ConstraintLayout>
